{% extends 'templates/app.twig' %}
{% block description %}Change avatar{% endblock %}
{% block content %}
    <div class="panel panel-default" style="width:40%;margin-top:3%;position:relative;margin-left:auto;margin-right:auto;">
        <div class="panel-heading">Change Avatar</div>
        <div class="panel-body">
            <form action="{{ path_for('avatar') }}" method="POST" autocomplete="off" enctype="multipart/form-data">
                <div class="form-group {{ errors.image ? 'has-error' : '' }}">
                    <label for="file">Choose a file:</label><br/>
                    <input type="file" class="btn btn-default" name="image" style="width:50%" id="image">
                    {% if errors.image %}
                        <span class="help-block">{{ errors.image | first }}</span>
                    {% endif %}
                </div>

                <input type="submit" class="btn btn-primary" value="Change">

                {{ csrf_field() | raw }}

            </form>
            {% if uploaded %}
                <br/>

                <div class="alert alert-success">You have changed your profile picture!</div>
                <center><img src="{{ base_url() }}/images/avatars/{{name}}" width="200" height"200"="height"200""></center>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
{% block js %}
<script>
    $("li#ucp").addClass("active");
</script>
{% endblock %}
