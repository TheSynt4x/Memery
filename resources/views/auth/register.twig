{% extends 'templates/app.twig' %}
{% block description %}Sign Up{% endblock %}
{% block content %}
    <div class="row" style="width:40%;margin-top:3%;position:relative;margin-left:auto;margin-right:auto;">
        <div class="col-md">
            {% if success %}
                <div class="alert alert-success">You have been registered. You may now login with your details!</div>
            {% endif %}
            {% if cErrors is not empty %}
                <div class="alert alert-danger">{{ cErrors | first }}</div>
            {% endif %}
            <div class="panel panel-default">
                <div class="panel-heading">Sign Up</div>
                <div class="panel-body">
                    <form action="{{ path_for('register') }}" method="POST" autocomplete="off">
                        <div class="form-group {{ errors.username ? 'has-error' : '' }} required">
                            <label for="username">Username:</label>
                            <input class="form-control" type="text" name="username" id="username" placeholder="dankman123">
                            {% if errors.username %}
                                <span class="help-block">{{ errors.username | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group {{ errors.email ? 'has-error' : '' }} required">
                            <label for="email">Email:</label>
                            <input class="form-control" type="email" name="email" id="email" placeholder="you@domain.com">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group {{ errors.password ? 'has-error' : '' }} required">
                            <label for="password">Password:</label>
                            <input class="form-control" type="password" name="password" id="password" place="">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group {{ errors.confirm ? 'has-error' : '' }} required">
                            <label for="confirm">Confirm Password:</label>
                            <input class="form-control" type="password" name="confirm" id="confirm" value="">
                            {% if errors.confirm %}
                                <span class="help-block">{{ errors.confirm | first }}</span>
                            {% endif %}
                        </div>

                        <button type="submit" class="btn btn-default">Sign Up</button>

                        {{ csrf_field() | raw }}

                        <hr/>
                        <a href="{{ path_for('login') }}">Already a member? Sign in now!</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    <script>
        $("li#register").addClass("active");
    </script>
{% endblock %}
